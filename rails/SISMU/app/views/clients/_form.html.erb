<%= simple_form_for @client do |f| %> 
  <main class="clientesNew sombra">
    <section class="botonVolverNew">
      <%= link_to "Volver", clients_url, class: "volverNew" %>
    </section>
    <h1>Registrar Cliente</h1>

    <section class="informacionNew">
      <div>
        <%= f.label :id, "Cedula", class: 'is-required' %>
        <%= f.input_field :id, class: 'input_clientes'%>
        <% if @client.errors[:id].any? %>
          <p class="text-danger"><%= @client.errors[:id].first %></p>
        <% end %>
      </div>

      <div>
        <%= f.label :nombre_cli,"Nombre ", class: 'is-required'%>
        <%= f.input_field :nombre_cli, class: 'input_clientes' %>
        <% if @client.errors[:nombre_cli].any? %>
          <p class="text-danger"><%= @client.errors[:nombre_cli].first %></p>
        <% end %>
      </div>

      <div>      
        <%= f.label :nombre2_cli,"Segundo Nombre "%>
        <%= f.input_field :nombre2_cli,  class: 'input_clientes2' %>
        <% if @client.errors[:nombre2_cli].any? %>
          <p class="text-danger"><%= @client.errors[:nombre2_cli].first %></p>
        <% end %>
      </div>

      <div>      
        <%= f.label :apellido_cli,"Apellido ", class: 'is-required' %> 
        <%= f.input_field :apellido_cli, class: 'input_clientes' %>
        <% if @client.errors[:apellido_cli].any? %>
          <p class="text-danger"><%= @client.errors[:apellido_cli].first %></p>
        <% end %>
      </div>

      <div>      
        <%= f.label :apellido2_cli,"Segundo Apellido "%> 
        <%= f.input_field :apellido2_cli,class: 'input_clientes2' %>
        <% if @client.errors[:apellido2_cli].any? %>
          <p class="text-danger"><%= @client.errors[:apellido2_cli].first %></p>
        <% end %>
      </div>

      <div>      
        <%= f.label :tel_cli,"Télefono ", class: 'is-required' %> 
