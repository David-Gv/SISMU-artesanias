          <p class="text-danger"><%= @client.errors[:direccion_cli].first%> </p>
        <% end %>
      </div>

      <div>      
        <%= f.label :ciudad,"Ciudad ", class: 'is-required' %> 
        <%= f.input_field :ciudad, class: 'input_clientes2'%>
        <% if @client.errors[:ciudad].any? %>
          <p class="text-danger"><%= @client.errors[:ciudad].first %></p>
        <% end %>
      </div>

      <div>      
        <%= f.label :barrio,"Barrio ", class: 'is-required' %> 
        <%= f.input_field :barrio, class: 'input_clientes2'%>
        <% if @client.errors[:barrio].any? %>
          <p class="text-danger"><%= @client.errors[:barrio].first %></p>
        <% end %>
      </div>
    </section>           
        
    <section class="botonesNew">
      <%= f.button :submit,"Crear", class:"crearClientes"%>
    </section>    
  </main>
<% end %>