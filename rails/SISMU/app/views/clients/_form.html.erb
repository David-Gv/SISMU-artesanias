        <% if @client.errors[:tel_cli].any? %>
          <p class="text-danger"><%= @client.errors[:tel_cli].first %></p>
        <% end %>
      </div>

      <div>      
        <%= f.label :correo_cli,"Correo Eléctronico ", class: 'is-required' %> 
        <%= f.input_field :correo_cli, class: 'input_clientes2'%>
        <% if @client.errors[:correo_cli].any? %>
          <p class="text-danger"><%= @client.errors[:correo_cli].first %></p>
        <% end %>
