<%= simple_form_for @production do |f| %> <br> 
<main class ="produccionNew sombra">  

    <section class="botonVolverNew"><%= link_to "Volver", productions_url, class: "volverNew" %></section>
    <h1 class="containerProds-text">Registrar Producci√≥n</h1>
    <section class="informacionNewConf">
        <div>
            <%= f.label :ref, "Ingresa referencia", class: 'is-required' %><br>
            <%= f.input_field :ref %>    
            <% if @production.errors[:ref].any? %>
                <p class="text-danger"><%= @production.errors[:ref].first %></p>
            <% end %>
        </div>
    </section>
    <section class="informacionProduccionNew">
        <div>
            <%= f.label :created_at, "Fecha en que se ingresaron los productos"%><br>
            <%= f.input_field :created_at %>    
        </div>
    </section>

    <section class="botonesNew">
        <%= f.button :submit, 'Crear', class: "crearProduccion" %>
    </section>    

    

</main>
<% end %>